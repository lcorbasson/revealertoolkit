<?xml version="1.0" standalone="yes" ?>
<commands>
	<command>
		<name>case_list</name>
		<alias>Case list</alias>
		<description>Gives a list of the cases currently stored in the morgue</description>
		<module>RVTbase::RVT_morgue</module>
		<function>RVT_case_list</function>
		<standard>/[ ]*(\d+)[ ]\'(.+)\':\s?/</standard>
	</command>
	<command>
		<name>images_list</name>
		<alias>Images list</alias>
		<description>Gives a list of the disk images stored in the morgue</description>
		<module>RVTbase::RVT_morgue</module>
		<function>RVT_images_list</function>
		<standard>/[ \t]+((((\d+)-(\d+))-(\d+)).*)/</standard>
		<icon>images_list.png</icon>
	</command>
	<command>
		<name>images_partition_info</name>
		<alias>Partition information</alias>
		<description>Gives information about a partition</description>
		<objects>
			<object>partition</object>
		</objects>
		<module>RVTbase::RVT_morgue</module>
		<function>RVT_images_partition_info</function>
		<args>
			<arg>object</arg>
		</args>
		<standard>/.*:[ ]*(.*)\s?/</standard>
	</command>
	<command>
		<name>images_partition_table</name>
		<alias>Partition table</alias>
		<description>Gives the partition table of an image</description>
		<objects>
			<object>disk</object>
		</objects>
		<module>RVTbase::RVT_morgue</module>
		<function>RVT_images_partition_table</function>
		<args>
			<arg>object</arg>
		</args>
		<standard>/[ \t]*(\d+):[ \t]*(\d+ .{2})[ \t]+(.*)\s?/</standard>
	</command>
	<command>
		<name>mount_assign</name>
		<alias>Mount case</alias>
		<description>Mounts the partitions of a case</description>
		<objects>
			<object>case</object>
		</objects>
		<module>RVTbase::RVT_morgue</module>
		<function>RVT_mount_assign</function>
		<args>
			<arg>object</arg>
		</args>
		<icon>mount_assign.png</icon>
	</command>
	<command>
		<name>mount_delete</name>
		<alias>Unmount case</alias>
		<description>Unmounts the partitions of a case</description>
		<objects>
			<object>case</object>
		</objects>
		<module>RVTbase::RVT_morgue</module>
		<function>RVT_mount_delete</function>
		<args>
			<arg>object</arg>
		</args>
		<pre>
			<pre command="mount_assign"></pre>
		</pre>
		<icon>mount_delete.png</icon>
	</command>
	<command>
		<name>mount_list</name>
		<alias>List mounted partitions</alias>
		<description>Show a list of the currently mounted partitions</description>
		<objects>
			<object>case</object>
		</objects>
		<module>RVTbase::RVT_morgue</module>
		<function>RVT_mount_list</function>
		<standard>/[ ]*(\d{6}-\d{2}-\d).*[ ]\w*=(.+)[ ]\w*=(\d+)\s?/</standard>
		<icon>mount_list.png</icon>
	</command>
</commands>